# Winerank Configuration
# Copy this file to .env and fill in your values

# Database
# For local Docker: postgresql+psycopg://winerank:winerank@localhost:5432/winerank
# For cloud: postgresql+psycopg://user:pass@host:5432/dbname
WINERANK_DATABASE_URL=postgresql+psycopg://winerank:winerank@localhost:5432/winerank

# Crawler Settings
WINERANK_MICHELIN_LEVEL=3                    # Options: 3, 2, 1, gourmand, selected, all
WINERANK_RESTAURANT_WEBSITE_DEPTH=4          # Max link depth when navigating restaurant sites
WINERANK_MAX_RESTAURANT_PAGES=20             # Max pages to check per restaurant site
WINERANK_CRAWLER_CONCURRENCY=3               # Number of parallel restaurant crawls
WINERANK_DOWNLOAD_DIR=data/downloads         # Directory for downloaded wine lists

# LLM Settings (optional, for future crawler navigation fallback)
WINERANK_LLM_PROVIDER=openai                 # Options: openai, anthropic, gemini, etc.
WINERANK_LLM_MODEL=gpt-4o-mini               # Model name
WINERANK_LLM_API_KEY=                        # Your API key (if needed)

# Playwright Settings
WINERANK_HEADLESS=true                       # Run browser in headless mode
WINERANK_BROWSER_TIMEOUT=30000               # Browser timeout in milliseconds
